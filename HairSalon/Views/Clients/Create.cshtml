@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<p><strong>NOTE:</strong> You need to have at least one Sylist before you can add an Client!</p>
<p>Go to @Html.ActionLink("this page", "Create", "Stylists") to add a Stylist.</p>

<h4>Add a new Client</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.ClientName)
  @Html.TextBoxFor(model => model.ClientName)



  @Html.LabelFor(model => model.Stylist)
  @Html.DropDownList("StylistId")

  <input type="submit" value="Add new Client" class="btn btn-primary" />
}
<p>@Html.ActionLink("Show all items", "Index")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>