@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<h1>Clients: </h1>

@if (@Model.Count == 0)
{
  <h3>No Clients have been added at this time.</h3>
} 
else
{
  <ul>
    @foreach (Client client in Model)
    {
      <p>@Html.ActionLink($"{client.ClientName}", "Details", new { id = client.ClientId })</p>
    }
  </ul>
}

<p>@Html.ActionLink("Add new client", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>