@model HairSalon.Models.Stylist

@{
    ViewData["Title"] = "Clients for " + Model.StylistName;
}

<h1>@ViewData["Title"]</h1>

@if (Model.Clients.Count == 0)
{
    <p>No clients found.</p>
}
else
{
    <ul>
        @foreach (var client in Model.Clients)
        {
            <li>@client.ClientName</li>
        }
    </ul>
}